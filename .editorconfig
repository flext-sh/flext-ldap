# EditorConfig for FLEXT projects
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.toml]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.py]
max_line_length = 88
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2
